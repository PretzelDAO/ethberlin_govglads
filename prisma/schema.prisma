generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Proposal {
  id    String @id @default(uuid()) @db.Uuid
  dao   DAO    @relation(fields: [daoId], references: [id])
  daoId String @db.Uuid
}

model DAO {
  id        String     @id @default(uuid()) @db.Uuid
  proposals Proposal[]
}
